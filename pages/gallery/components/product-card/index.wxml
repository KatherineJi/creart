<view
  id="{{independentID}}"
  class="product-card"
  bind:tap="clickHandle"
  data-product="{{ product }}">
  <view class="product-card__main">
    <view class="product-card__thumb" bind:tap="clickThumbHandle">
      <!-- <t-image
        t-class="product-card__img"
        src="{{ product.creations_preview_img }}"
        mode="aspectFill"
        lazy-load /> -->
      <image style="width: 100%; height: 100%; background-color: #eeeeee;" src="{{product.preview_imgs[0]}}"></image>
    </view>
    <view class="product-card__body">
      <view class="title">{{product.name}}</view>
      <view class="product-card__upper">
        {{product.description}}
      </view>
      <!-- <view class="product-card__down">
        <view class="product-card__status"> 状态：{{ product.status }} </view>
      </view> -->
    </view>
  </view>
</view>