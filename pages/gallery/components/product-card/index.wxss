.product-card {
  box-sizing: border-box;
  /* box-sizing: content-box; */
  font-size: 24rpx;
  border-bottom: none;
}

.product-card__main {
  box-sizing: border-box;
  position: relative;
  display: flex;
  line-height: 1;
  padding: 24rpx;
  background: transparent;
  width: 100%;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  border-top: 1px solid rgb(211, 211, 211);
}

.product-card__thumb {
  flex-shrink: 0;
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 24rpx;
  overflow: hidden;
}

/* .product-card__thumb:empty {
  display: none;
  margin: 0;
} */

.product-card__img {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 16rpx 16rpx 0 0;
  overflow: hidden;
}

.status-wrapper {
  position: absolute;
  background-color: black;
  opacity: 0.5;
  width: 100%;
  height: 100%;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.status-text {
  font-size: 48rpx;
  color: white;
}

.product-card__body {
  height: 160rpx;
  box-sizing: border-box;
  display: flex;
  flex: 1 1 auto;
  background: #fff;
  border-radius: 0 0 16rpx 16rpx;
  padding: 16rpx 24rpx;
  flex-direction: column;
  justify-content: space-between;
  overflow: hidden;
}

.title {
  /* position: absolute;
  bottom: 24rpx;
  left: 24rpx; */
  color: #797979;
  font-size: 32rpx;
}

.product-card__upper {
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.product-card__name {
  flex-shrink: 0;
  font-size: 28rpx;
  color: #333;
  font-weight: 400;
  display: -webkit-box;
  height: 72rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-word;
  line-height: 36rpx;
}

.product-card__tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 8rpx 0 0 0;
}

.product-card__tag {
  margin: 0 8rpx 8rpx 0;
}

.product-card__tag-positive {
  color: #298a26;
  background: transparent;
  font-size: 20rpx;
  border: 1rpx solid #298a26;
  padding: 0 8rpx;
  border-radius: 16rpx;
  line-height: 30rpx;
  margin: 0 8rpx 8rpx 0;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  word-break: keep-all;
  text-overflow: ellipsis;
}

.product-card__down {
  display: flex;
  position: relative;
  flex-direction: row;
  justify-content: flex-start;
  align-items: baseline;
  line-height: 32rpx;
  margin: 8rpx 0 0 0;
}


