<wxs src="/utils/num.wxs" module="toolNum" />
<view class="gallery-print-preview">
  <view class="gallery-print-preview-container">
    <!-- {{galleryTab}} -->
    <view class="image-wrapper">
      <t-swiper
      wx:if="{{imgs.length > 0}}"
      current="{{0}}"
      autoplay="{{true}}"
      duration="{{'500'}}"
      interval="{{5000}}"
      navigation="{{ { type: 'dots' } }}"
      imageProps="{{ { mode: 'scaleToFill' } }}"
      height="{{'800rpx'}}"
      list="{{imgs}}"
      bind:click="handleSwiperClick" />
      <image wx:else style="width: 100%; height: 100%;" show-menu-by-longpress src="{{img}}"></image>
    </view>
    <view class="details-wrapper">
      <product-specs-wrapper
      id="productSpecsPopup"
      product="{{product}}"
      skuList="{{product.skuArray}}"
      fromPreview
      selectedSkuDetail="{{selectedSkuDetail}}"
      bind:updateSelectedAttrStr="updateSelectedAttrStr"
      bind:specsConfirm="specsConfirm"
      isStock="{{true}}"
      outOperateStatus="{{false}}"/>
      <!-- bind:closeSpecsPopup="handlePopupHide" -->
  
