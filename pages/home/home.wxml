  <view class="list-wrapper">
    <view class="title-line">
      <view class="title">风格</view>
      <view class="more-btn" bind:tap="goTemplateListClickHandle">更多风格 ></view>
    </view>
    <template-list
      wr-class="template-list-container"
      templateList="{{templateList}}"
      bind:click="templateListClickHandle" />
  </view>
  <view class="list-wrapper">
    <view class="title-line">
      <view class="title">产品</view>
      <view class="more-btn" bind:tap="goProductListClickHandle">更多产品 ></view>
    </view>
    <product-list
      wr-class="product-list-container"
      productList="{{productList}}"
      bind:click="productListClickHandle"
      bind:addcart="productListAddCartHandle" />
  </view>
  <load-more list-is-empty="{{!productList.length}}" status="{{productListLoadStatus}}" bind:retry="onReTry" />
