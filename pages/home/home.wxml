<view style="text-align: center; color: #b9b9b9" wx:if="{{pageLoading}}">
  <t-loading theme="circular" size="40rpx" text="加载中..." inherit-color />
</view>
<view class="home-page-header">
  <view class="search" bind:tap="navToSearchPage">
    <t-search
      t-class-input="t-search__input"
      t-class-input-container="t-search__input-container"
      placeholder="搜索产品"
      leftIcon=""
      disabled>
      <t-icon slot="left-icon" prefix="wr" name="search" size="40rpx" color="#bbb" />
    </t-search>
  </view>
  <view class="swiper-wrap">
    <t-swiper
      wx:if="{{swiperImgs.length > 0}}"
      current="{{0}}"
      autoplay="{{true}}"
      duration="{{'500'}}"
      interval="{{5000}}"
      navigation="{{ { type: 'dots' } }}"
      imageProps="{{ { mode: 'scaleToFill' } }}"
      height="{{'380rpx'}}"
      list="{{swiperImgs}}"
      bind:click="handleSwiperClick" />
  </view>
  <view class="second-swiper-wrap">
    <t-swiper
      wx:if="{{secondSwiperImgs.length > 0}}"
      current="{{current}}"
      autoplay="{{autoplay}}"
      duration="{{duration}}"
      interval="{{interval}}"
      navigation="{{navigation}}"
      imageProps="{{swiperImageProps}}"
      height="{{'230rpx'}}"
      list="{{secondSwiperImgs}}"
      bind:click="handleSecondSwiperClick" />
  </view>
</view>
